# Weight                       
                LayoutTester1:
                    orientation: 'vertical' 
                    LayoutTester2:
                        size_hint_y:.4
                        WhiteLabel:
                            text:'Weight'
                    LayoutTester1:
                        LayoutTester3:
                            size_hint_x:1.66
                            ButIcon:
                                icon:'minus'
                                on_release:app.weight_decrease()
                                

                        
                            MDLabel:
                                text: str(app.weight)
                                # pos_hint: {'center_x': .5, 'center_y': .5}
                                halign: 'center'

                            ButIcon:
                                icon:'plus'
                                on_release:app.weight_increase()
                                
                        LayoutTester3:
                            MDLabel:
                                text: app.weight_unit
                                # pos_hint: {'center_x': .5, 'center_y': .5}
                                halign: 'center'

                            MDIconButton:
                                id:but
                                icon:'chevron-down'
                                pos_hint: {'center_x': .5, 'center_y': .5}
                                on_release: app.drop(app.weight_items,self)

# Height
                LayoutTester1:
                    orientation: 'vertical' 
                    LayoutTester2:
                        size_hint_y:.4
                        WhiteLabel:
                            text:'Height'
                    LayoutTester1:
                        LayoutTester3:
                            size_hint_x:1.66
                            ButIcon:
                                icon:'minus'
                                on_release:app.height_decrease()
                                

                        
                            MDLabel:
                                text: str(app.height)
                                # pos_hint: {'center_x': .5, 'center_y': .5}
                                halign: 'center'

                            ButIcon:
                                icon:'plus'
                                on_press:app.height_increase()
                                
                                
                        LayoutTester3:
                            MDLabel:
                                text: app.height_unit
                                # pos_hint: {'center_x': .5, 'center_y': .5}
                                halign: 'center'

                            MDIconButton:
                                id:but
                                icon:'chevron-down'
                                pos_hint: {'center_x': .5, 'center_y': .5}
                                on_release: app.drop(app.height_items,self)

# Age
                LayoutTester1:
                    orientation: 'vertical' 
                    LayoutTester2:
                        size_hint_y:.4
                        WhiteLabel:
                            text:'Age'
                    LayoutTester3:
                        ButIcon:
                            icon:'minus'
                            

                        
                        MDLabel:
                            text: str(app.age)
                            # pos_hint: {'center_x': .5, 'center_y': .5}
                            halign: 'center'

                        ButIcon:
                            icon:'plus'
                            
                LayoutTester1:    
                    MDRaisedButton:
                        text:'Calculate'
                        halign:'center'
                        on_release: print(app.height_unit)
                
